<h2>Update the  {{name}}</h2>

<form method="POST" action="/edit/{{_id}}">

<label>Drone name:</label>
<input type="text" name="name" value="{{name}}"/>

<label>Propellers:</label>
<input type="number" name="propellers" value = "{{propellers}}"/>

<label>Max Speed:</label>
<input type="number" name="maxSpeed" value = "{{maxSpeed}}"/>

<button type="submit">Edit!</button>

</form>
